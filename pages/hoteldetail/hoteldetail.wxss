page {width: 100%;height: 100%;background: #f5f5f5;}
.swiper-tab {width: 100%;border-bottom: 2rpx solid #ccc;text-align: center;height: 88rpx;line-height: 88rpx;display: flex;flex-flow: row;justify-content: space-between;}
.swiper-tab-item {width: 50%;color: #4d4d4d;font-size: 30rpx;}
.active {color: #2788f9;border-bottom: 2rpx solid #2788f9;}
swiper {width: 100%;height: 92vh;}
.swiper-item-css {width: 100%;height: 100%;}
swiper-item {width: 100%;height: 92vh;overflow-y: auto;}
/*list  */
.hotel-desc {width: 690rpx;height: 320rpx;border-radius: 20rpx;background: #fff;margin: 20rpx auto;padding: 0 10rpx;}
.hotel-base {width: 690rpx;background: #fff;border-radius: 20rpx;margin: 20rpx auto;padding: 0 10rpx;}
.hotel-spec-name {width: 100%;height: 60rpx;line-height: 60rpx;font-size: 30rpx;color: #1a1a1a;text-align: center;display: block;}
.hotel-list-name {font-size: 24rpx;color: #4d4d4d;text-indent: 20rpx;margin-top: 20rpx;}
.hotel-desc-middle {height: 320rpx;}
.hotel-phone {height: 66rpx;line-height: 66rpx;font-size: 24rpx;color: #4d4d4d;text-indent: 20rpx;}
.hotel-address {height: 140rpx;font-size: 24rpx;color: #4d4d4d;overflow: hidden;}
.hotel-name {color: #808080;}
.hotel-name-list {height: 60rpx;text-indent: 20rpx;}
.hotel-name-list-first {margin-top: 10rpx;height: 70rpx;line-height: 70rpx;text-indent: 20rpx;}

page {width: 100%;height: 100%;background: #f5f5f5;}
.order-status {width: 100%;height: 138rpx;background: #00a0e9;color: #fff;font-size: 30rpx;text-indent: 40rpx;overflow: hidden;}
.order-status-name {width: 100%;line-height: 60rpx;height: 60rpx;display: block;margin-top: 15rpx;}
.order-status-desc {width: 100%;height: 50rpx;line-height: 50rpx;display: block;font-size: 24rpx;}
.order-base {width: 710rpx;background: #fff;border-radius: 20rpx;margin: 20rpx auto;}
.order-detail-list {height: 300rpx;text-indent: 40rpx;}

.detail-list-top {width: 100%;height: 150rpx;border-bottom: 2rpx solid #f5f5f5;overflow: hidden;}
.list-top-hotel-name {margin-top: 20rpx;height: 60rpx;line-height: 60rpx;font-size: 30rpx;color: #4d4d4d;}
.list-top-hotel {height: 60rpx;}
.top-hotel-left {height: 60rpx;line-height: 60rpx;float: left;font-size: 24rpx;color: #808080;}
.top-hotel-right {width: 140rpx;height: 100%;float: right;margin-right: 20rpx;}
.order-navigation-right {width: 4rpx;height: 33rpx;background: #2788f9;display: block;float: left;margin: 5rpx 20rpx;}
.order-navigation-icon, .order-phone-icon {width: 43rpx;height: 43rpx;display: block;float: left;}

/*----down--  */

.detail-list-down {position: relative;width: 100%;height: 135rpx;border-bottom: 2rpx solid #f5f5f5;text-indent: 40rpx;}
.item-detail-room {font-size: 30rpx;color: #4d4d4d;margin-top: 16rpx;height: 50rpx;line-height: 50rpx;}
.item-detail-time {font-size: 24rpx;color: #808080;height: 50rpx;line-height: 50rpx;}
.item-pay-price {position: absolute;right: 20rpx;top: 20rpx;color: #f39002;}

/*order-name  */

.order-room {min-height: 180rpx;overflow: hidden;}
.order-room-num, .order-room-name, .order-room-phone {width: 100%;height: 50rpx;line-height: 50rpx;font-size: 28rpx;color: #4d4d4d;text-indent: 40rpx;}
.order-room-name{min-height: 50rpx;}
.order-room-num {margin-top: 10rpx;}
.order-title {color: #808080;}
.order-code {height: 140rpx;overflow: hidden;font-size: 28rpx;color: #4d4d4d;text-indent: 40rpx;}
.ordr-code-code {margin-top: 10rpx;height: 60rpx;line-height: 60rpx;}
.ordr-code-time {height: 60rpx;line-height: 60rpx;}
.order-id {color: #808080;}
/*button  */
.order-status-button{width: 650rpx;height: 88rpx;line-height: 88rpx;text-align: center;margin: 40rpx auto;color: #e60012;border: 2rpx solid #e60012;border-radius: 50rpx;}